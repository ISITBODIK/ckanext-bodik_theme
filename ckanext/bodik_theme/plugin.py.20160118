import ckan.plugins as plugins
import ckan.plugins.toolkit as toolkit

def dataset_count():
    count = toolkit.get_action('package_list')( data_dict={} )
    #count = toolkit.get_action('package_search')( search_data_dict={} )
    return len(count)

class BodikThemePlugin(plugins.SingletonPlugin):
    plugins.implements(plugins.IConfigurer)
    plugins.implements(plugins.ITemplateHelpers)
    # IConfigurer

    def update_config(self, config_):
        toolkit.add_template_directory(config_, 'templates')
        toolkit.add_public_directory(config_, 'public')
        toolkit.add_resource('fanstatic', 'bodik_theme')

    def get_helpers(self):
        return { 'bodik_theme_dataset_count': dataset_count  }
